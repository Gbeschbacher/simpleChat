doctype html
html

  head
    meta(charset='utf-8')
    link(type='text/css', rel='stylesheet', href='/app.css')
    title simpleChat

  body
    //- single Page App
    #app.container
    script(src='/app.js')

    script(type='text/template', name='home')
      h1 simpleChat
      .row
        button#chatroom.btn.btn-primary.col-xs-4(type="submit") create chatroom
        input.col-xs-4(type="text", name="chatroom")
        button#username.btn.btn-primary.col-xs-4(type="submit") create user
        input.col-xs-4(type="text", name="username")

      .row
        .col-xs-12
          p available chatrooms
        //- ul
        //- <%= _.each(chatrooms, function(room){ %>
        //-     li
        //-       a(href="#<%=room.get('id')%>") chat <%=room.get('id')%>
        //-   <%= }) %>

    script(type='text/template', name='chatroom')
      #chat
          #roomspanel
            h1 Chat <%=room.get('id')%>
            ul#rooms
              li#system.roomtab.active Central Room
              li.roomtab Small Room
              li.roomtab.create + create
          #central
            #userlist
              ul
                li Someone
                li Another
                li and more
                li lurker
            #messagespanel
              #messages
                #central_room
                  .line.system
                    span.timestamp 10:12
                    span.message momo connected.
                  .line
                    span.timestamp 10:12
                    span.user momo
                    span.message  ... connected
              #inputbox
                form
                  textarea#inputline


    script(src="https://cdn.socket.io/socket.io-1.0.0.js")
