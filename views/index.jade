doctype html
html

  head
    meta(charset='utf-8')
    link(href="/app.css" , rel="stylesheets")
    title simpleChat

  body
    // single Page App
    #app
    script(src='app.js')
    script(type='text/template', name='home')
      <h1>simpleChat</h1>
      input(type="text", name="username")
      button#username(type="submit") create
      input(type="text", name="chatroom")
      button#chatroom(type="submit") create

    script(type='text/template', name='chatroom')
      <h1>Chat Room</h1>
      input(type="text")
      button(type="submit") send
      #chat
          #roomspanel
            h1 Chat Layout
            ul#rooms
              li#system.roomtab.active Central Room
              li.roomtab Small Room
              li.roomtab.create + create
          #central
            #userlist
              ul
                li Someone
                li Another
                li and more
                li lurker
            #messagespanel
              #messages
                #central_room
                  .line.system
                    span.timestamp 10:12
                    span.message momo connected.
                  .line
                    span.timestamp 10:12
                    span.user momo
                    span.message  ... connected
              #inputbox
                form
                  textarea#inputline




    script(src="https://cdn.socket.io/socket.io-1.0.0.js")
